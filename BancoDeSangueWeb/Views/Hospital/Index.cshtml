@model List<Hospital>


<h3>Hospitais</h3>
<a class="btn btn-primary mg-10" asp-action="Cadastrar" asp-controller="Hospital">Cadastrar Hospital</a>

<table class="table table-hover table-striped mg-20">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Telefone</th>
            <th>Endereço</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hospital in Model)
        {
            <tr>
                <td>@hospital.Nome</td>
                <td>@hospital.Telefone</td>
                <td>@hospital.Endereco</td>
                <td>
                    <a class="btn btn-danger" asp-action="Remover" asp-controller="Hospital" asp-route-id="@hospital.Id">Remover</a>

                    <a class="btn btn-warning" asp-action="Editar" asp-controller="Hospital" asp-route-id="@hospital.Id">Editar</a>
                </td>

            </tr>
        }
    </tbody>
</table>

<p><b>Quantidade de itens: </b> @Model.Count </p>
