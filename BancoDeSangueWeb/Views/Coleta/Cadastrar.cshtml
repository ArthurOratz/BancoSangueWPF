@model Coleta

<form asp-action="Cadastrar" asp-controller="Coleta" method="post">
    <fieldset>
        <legend>Cadastrar Coleta</legend>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="DoadorId" class="control-label">Doador</label>
            <select asp-for="DoadorId" class="form-control" asp-items="@ViewBag.Doadores">
                <option>--SELECIONE--</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="FuncionarioId" class="control-label">Funcionario</label>
            <select asp-for="FuncionarioId" class="form-control" asp-items="@ViewBag.Funcionarios">
                <option>--SELECIONE--</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Quantidade" class="control-label"></label>
            <input asp-for="Quantidade" class="form-control" />
            <span asp-validation-for="Quantidade" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Data</label>
            <input  disabled value="@DateTime.Now.ToShortDateString()" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Cadastrar" class="btn btn-primary mg-10" />
            <a class="btn btn-secondary mg-10" asp-action="Index" asp-controller="Coleta">Voltar para Lista</a>
        </div>
    </fieldset>
</form>