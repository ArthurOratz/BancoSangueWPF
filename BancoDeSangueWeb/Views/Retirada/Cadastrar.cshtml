@model Retirada

<form asp-action="Cadastrar" asp-controller="Retirada" method="post">
    <fieldset>
        <legend>Cadastrar Retirada</legend>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="HospitalId" class="control-label">Hospital</label>
            <select asp-for="HospitalId" class="form-control" asp-items="@ViewBag.Hospitais">
                <option>--SELECIONE--</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="TipoSanguineoId" class="control-label">Tipo Sanguineo</label>
            <select asp-for="TipoSanguineoId" class="form-control" asp-items="@ViewBag.TiposSanguineos">
                <option>--SELECIONE--</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Quantidade" class="control-label"></label>
            <input asp-for="Quantidade" class="form-control" />
            <span asp-validation-for="Quantidade" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Data</label>
            <input disabled value="@DateTime.Now.ToShortDateString()" class="form-control" />
        </div>

        <div class="form-group">
            <input type="submit" value="Cadastrar" class="btn btn-primary mg-10" />
            <a class="btn btn-secondary mg-10" asp-action="Index" asp-controller="Retirada">Voltar para Lista</a>
        </div>
    </fieldset>
</form>

